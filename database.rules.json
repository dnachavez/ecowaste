{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "donations": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["userId"]
    },
    "projects": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["authorId"]
    },
    "requests": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["requesterId", "ownerId", "donationId"]
    }
  }
}
